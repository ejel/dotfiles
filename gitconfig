[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	st = status
	co = checkout
	pr = pull --rebase
	wipebranches = branch
	cleanbranches = git wipebranches branch --merged | grep -v * | xargs -n 1 git branch -d
